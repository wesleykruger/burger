<h1 class="text-center">Welcome to Burger Barn!</h1>
<hr>

<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <img src="assets/img/burger.png" alt="burger-barn" height="100%" width="100%">
    </div>
    <div class="col-4"></div>
</div>

<div class="row">
    <div class="col-3"></div>
    <div class="col-4">
        <h2 class="text-center">Ready to eat!</h2>

        <ul>
            {{#each burger}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>

    </div>
    <div class="col-3">
        <h2 class="text-center">Already eaten!</h2>

        <ul>
            {{#each burger}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
    <div class="col-2"></div>
</div>


<div class="row text-center">
    <div class="col-3"></div>
    <div class="col-6">
        <h2>May we take your order?</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="name">
            </div>

            <button type="submit">Add Burger</button>
        </form>
    </div>
    <div class="col-3"></div>
</div>